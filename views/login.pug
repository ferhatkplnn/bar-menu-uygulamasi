extends layouts/layout.pug

block content
    div.text-center.container-fluid(style="min-height: 400px")
        if errors
            .alert.alert-warning.alert-dismissible.fade.show(role="alert")
                strong= errors
                button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")

        main.col-sm-6.col-md-4.col-12.m-auto.my-5
            form(action="/login" method="POST")
                h1.h3.mb-5.fw-normal Giriş
                .form-floating
                    input#email.form-control(type="text" placeholder="name@example.com" name="email" required)
                    label(for="username") Kullanıcı adı
                .form-floating
                    input#passwod.form-control(type="password" placeholder="Password" name="password" minlength="6" maxlength="20" required)
                    label(for="password") Şifre
                button.w-100.btn.btn-lg.btn-primary(type="submit") Giriş yap


